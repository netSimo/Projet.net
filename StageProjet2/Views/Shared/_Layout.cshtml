<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StageProjet2</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    
    <link rel="stylesheet" href="~/css/MyCssTheme.css"   />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StageProjet2.styles.css" asp-append-version="true" />
        <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-info" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"> <img src="~/Images/Amal kzoula alrokba (2).png" height="70px" width="100px" />  </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                      
                        
                       
                        @if (User.IsInRole("Admin") || User.IsInRole("Caissier"))
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Adherent" asp-action="Index">Adherents</a>
                        </li>}

                         @if (User.IsInRole("Admin") || User.IsInRole("Caissier"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Facture" asp-action="Index">Facture</a>
                        </li>}

                        @if (User.IsInRole("Admin") || User.IsInRole("Releveur"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Facture" asp-action="Create">Nouvelle facture</a>
                            </li>
                        }

                         @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Prix" asp-action="Index">Prix</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Comptes</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>






    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SebnetMohamed - <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
